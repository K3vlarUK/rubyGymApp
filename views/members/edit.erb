<div class="creation-template">
  <h2>Edit existing member</h2>
  <form action="/members/ <%= @member.id %> " method="post">
    <label for="first-name">First Name: </label>
    <input type="text" name="first_name" id="first-name" value="<%= @member.first_name %>">
    <br>
    <label for="last-name">Last Name: </label>
    <input type="text" name="last_name" id="last-name" value="<%= @member.last_name %>">
    <br>
    <label for="premium-member">Premium Membership: </label>
    <select name="premium_member" id="premium-member">
      <option value="true" <%= @member.premium_member == "t" ? "selected" : nil %>>True</option>
      <option value="false" <%= @member.premium_member == "f" ? "selected" : nil %>>False</option>
    </select>
    <br>
    <div class="submit-btn">
      <input type="submit" value="Edit Member">
    </div>
  </form>
</div>
